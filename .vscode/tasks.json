{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure & Build",
            "type": "shell",
            "command": "cmake -S . -B build && cmake --build build",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "Runs CMake configuration (creating the 'build' directory) and then compiles the project."
        },
        {
            "label": "Run Program",
            "type": "shell",
            "command": "./build/my_program",
            "group": "test",
            "dependsOn": [
                "CMake: Configure & Build"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}